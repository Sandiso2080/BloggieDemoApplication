@model List<BloggieDemoApplication.Models.Domain.BlogPost>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-6 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloogie - The Dev Blog
            </h1>
            <p>
                Bloggie is the gome to coding blogs converting a vast renge of topics like Html, Css, JavaScript, Asp.Net, C#, Angular etc.
                Want to read the latest dev articles? Jooin the bloggie app and get weekly blogs in your email.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/346529/pexels-photo-346529.jpeg?auto=compress&cs=tinysrgb&w=600"
                 alt="Bloggie - Dev blogs"
                 class="d-block mx-lg-auto img-fluid" width="300" />
        </div>
    </div>
 
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.Any())
            {
                foreach (var blogPost in Model)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading" class="mb-2 d-block img-fluid" />
                        <h2 class="mb-4">@blogPost.Heading</h2>
                        <p class="mb-4">
                            Author: @blogPost.Author
                            <br />
                            Published Date: @blogPost.PublishedDate.ToShortDateString()
                        </p>
                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>
                        <p class="mb-4">@blogPost.ShortDescription</p>
                        <a class="btn btn-dark" href="#">Read More</a>
                    </div>
                }
            }
        </div>
    </div>


</div>